{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "lib": ["es2022"],
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true
  }
}
