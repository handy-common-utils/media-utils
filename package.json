{
  "name": "@handy-common-utils/media-utils",
  "version": "1.0.0",
  "description": "A pure-JS, no-FFmpeg media info parser and audio stream extractor which works with popular formats and codecs and runs well in both browser and Node.js environments.",
  "scripts": {
    "download-sample-media-files": "bash test/download-sample-media-files.sh",
    "pretest": "eslint . --ext .ts && npm run download-sample-media-files",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "compile": "shx rm -rf dist && tsc",
    "prepare": "husky",
    "prepack": "npm run compile",
    "prepublish": "npm run compile",
    "preversion": "generate-api-docs-and-update-readme && git add README.md"
  },
  "dependencies": {
    "@handy-common-utils/misc-utils": "^1.11.1",
    "@handy-common-utils/promise-utils": "^1.7.1"
  },
  "devDependencies": {
    "@handy-common-utils/dev-dependencies-jest": "^1.8.0"
  },
  "optionalDependencies": {
    "@remotion/media-parser": "^4.0.377",
    "codem-isoboxer": "^0.3.10",
    "mp4box": "^2.2.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/handy-common-utils/media-utils.git"
  },
  "keywords": [
    "extract",
    "audio",
    "media",
    "mp4",
    "mp3",
    "aac",
    "mov",
    "wmv",
    "stream"
  ],
  "author": "James Hu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/handy-common-utils/media-utils/issues"
  },
  "homepage": "https://github.com/handy-common-utils/media-utils#readme"
}
