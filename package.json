{
  "name": "@handy-common-utils/media-utils",
  "version": "1.0.0",
  "description": "A pure-JavaScript media info parser and audio extractor for browsers and Node.js that works without FFmpeg, WASM, or external binaries.",
  "scripts": {
    "download-sample-media-files": "bash test/download-sample-media-files.sh",
    "pretest": "eslint . --ext .ts && npm run download-sample-media-files",
    "test": "rm -rf test/output/test-report*.json && NODE_OPTIONS='--experimental-vm-modules' jest",
    "doc": "generate-api-docs-and-update-readme && ts-node test/report.ts && prettier README.md --write",
    "compile": "shx rm -rf dist && tsc",
    "prepare": "husky",
    "prepack": "npm run compile",
    "prepublish": "npm run compile",
    "preversion": "generate-api-docs-and-update-readme && prettier README.md --write && git add README.md"
  },
  "dependencies": {
    "@handy-common-utils/misc-utils": "^1.11.1",
    "@handy-common-utils/promise-utils": "^1.7.1"
  },
  "devDependencies": {
    "@handy-common-utils/dev-dependencies-jest": "^1.8.0",
    "@handy-common-utils/fs-utils": "^1.1.2",
    "@remotion/media-parser": "^4.0.383",
    "codem-isoboxer": "^0.3.10",
    "mp4box": "^2.3.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/handy-common-utils/media-utils.git"
  },
  "keywords": [
    "extract",
    "audio",
    "video",
    "media",
    "mp4",
    "mp3",
    "aac",
    "mov",
    "wmv",
    "mkv",
    "mpeg",
    "mpeg-ts",
    "mpeg transport stream",
    "moov",
    "asf",
    "ebml",
    "webm",
    "matroska",
    "pcm",
    "wav",
    "flac",
    "ogg",
    "parse",
    "info",
    "stream"
  ],
  "author": "James Hu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/handy-common-utils/media-utils/issues"
  },
  "homepage": "https://github.com/handy-common-utils/media-utils#readme"
}
